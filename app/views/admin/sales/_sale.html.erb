<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %>
      <span class="label label-danger"> Past </span>
    <% elsif sale.upcoming?%>
      <span class="label label-success"> Active </span>
    <% else %>
      <span class="label label-warning"> Upcoming </span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
  <td>
    Actions
  </td>
</tr>  

    