<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">

    <% if active_sale? %>
      <div class="alert alert-info">
        <p>
          Theres an active <%= present_sale[0].name %> right now! Everything is <%= present_sale[0].percent_off %>% off!
        </p>    
      </div>
    <% end %>  

    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
